export class HttpServiceClient {
  constructor() {}

  async request<T = any>({
    url,
    method,
    headers,
    body,
  }: {
    url: string;
    method: 'GET' | 'POST';
    headers?: Record<string, string>;
    body?: any;
  }): Promise<T> {
    const response = await fetch(url, {
      method,
      headers: {
        Accept: 'application/json',
        ...headers,
      },
      body: body ? JSON.stringify(body) : undefined,
    });
    return response.json() as T;
  }
}
