import {
  IntegrationStep,
  IntegrationStepExecutionContext,
} from '@jupiterone/integration-sdk-core';

import { IntegrationConfig } from '../../config';
import {
  Steps,
  Entities,
} from '../constants';
import { createAPIClient } from '../../client';
import { create{{pascalCase entity.resourceName}}Entity } from '../converters';

export const {{camelCase entity.resourceName}}Steps: IntegrationStep<IntegrationConfig>[] = [
  {
    id: Steps.{{constantCase id}},
    name: '{{name}}',
    entities: [Entities.{{constantCase entity.resourceName}}],
    relationships: [],
    dependsOn: [
      {{#each dependsOn}}
        '{{this}}'{{#unless @last}},{{/unless}}
      {{/each}}
    ],
    executionHandler: {{camelCase id}},
  },
];

export async function {{camelCase id}}({
  instance,
  jobState,
  executionConfig,
}: IntegrationStepExecutionContext<IntegrationConfig>): Promise<void> {
  const client = createAPIClient(instance.config, executionConfig);

  await client.iterate{{pascalCase entity.resourceName}}(
    async (data) => {
        await jobState.addEntity(create{{pascalCase entity.resourceName}}Entity(data));
    },
  );
}
