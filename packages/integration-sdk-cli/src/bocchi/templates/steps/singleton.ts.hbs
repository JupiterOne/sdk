import {
  IntegrationStep,
  IntegrationStepExecutionContext,
} from '@jupiterone/integration-sdk-core';

import { IntegrationConfig } from '../../config';
import {
  Steps,
  Entities,
} from '../constants';
{{#if apiCall}}import { createAPIClient } from '../../client';{{/if}}
import { create{{pascalCase entityName}}Entity } from '../converters';

export const {{camelCase entity.resourceName}}Steps: IntegrationStep<IntegrationConfig>[] = [
  {
    id: Steps.{{constantCase id}},
    name: '{{name}}',
    entities: [Entities.{{constantCase entity.resourceName}}],
    relationships: [],
    dependsOn: [
      {{#each dependsOn}}
        '{{this}}'{{#unless @last}},{{/unless}}
      {{/each}}
    ],
    executionHandler: {{camelCase id}},
  },
];

export async function {{camelCase id}}({
  jobState,
  executionConfig,
  instance,
}: IntegrationStepExecutionContext<IntegrationConfig>) {
  {{#if request}}
  const client = createAPIClient(instance.config, executionConfig);

  const data = await client.get{{camelCase entity.resourceName}}();
  {{/if}}
  await jobState.addEntity(create{{pascalCase entity.resourceName}}Entity({{#if request}}data{{/if}}));
}
