{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint --ext .ts,.tsx,.js,.jsx --cache .",
    "test": "jest && yarn --cwd ./packages/integration-sdk-runtime test:event-handlers && yarn format:check",
    "test:ci": "yarn lint && yarn build --force && yarn test",
    "clean": "yarn lerna clean --yes && yarn clean:build && rm -r node_modules",
    "clean:build": "yarn lerna exec \"rm -rf ./dist tsconfig.tsbuildinfo\"",
    "prebuild": "yarn clean:build",
    "build": "tsc -b packages/integration-sdk-core packages/integration-sdk-runtime packages/integration-sdk-private-test-utils packages/integration-sdk-cli packages/integration-sdk-testing packages/integration-sdk-http-client",
    "prebuild:dist": "yarn clean:build",
    "build:dist": "lerna run build:dist",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml}\"",
    "prepush": "yarn lint && yarn build:dist && yarn jest --changedSince main"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jupiterone/integration-sdk-dev-tools": "^8.11.0",
    "@types/jest": "^29.2.3",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.6",
    "husky": "^4.2.5",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.2.6",
    "prettier": "^2.2.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "resolutions": {
    "@types/node": "^18"
  },
  "version": "0.0.0"
}
